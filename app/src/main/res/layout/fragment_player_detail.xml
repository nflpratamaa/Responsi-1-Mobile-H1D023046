<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"> <View
    android:id="@+id/top_border_view"
    android:layout_width="match_parent"
    android:layout_height="6dp"
    tools:background="@color/colorFW" /> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/arsenal_dark"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:text="Data not found" />

    <TextView
        android:id="@+id/tv_detail_dob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/arsenal_dark"
        android:textSize="16sp"
        tools:text="Data not found" />

    <TextView
        android:id="@+id/tv_detail_nationality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/arsenal_dark"
        android:textSize="16sp"
        tools:text="Data not found" />

    <TextView
        android:id="@+id/tv_detail_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/arsenal_dark"
        android:textSize="16sp"
        android:textStyle="italic"
        tools:text="Data not found" />
</LinearLayout>

</LinearLayout>